{
  "language": "python",
  "version": "3.11",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "uv sync --frozen --no-dev"
  },
  "start": "uv run uvicorn main:app --host 0.0.0.0 --port $PORT --workers 1",
  "env": [
    "SUPABASE_URL",
    "SUPABASE_KEY",
    "REDIS_HOST",
    "REDIS_PASSWORD",
    "PORT",
    "RELOAD_SECRET_TOKEN",
    "QUESTIONS_PATH"
  ]
}
